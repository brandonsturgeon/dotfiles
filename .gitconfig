[user]
    name = Brandon Sturgeon
    email = sturgeonb4@gmail.com
[core]
    editor = vim
[alias]
    a = add
    b = branch
    c = commit
    d = diff
    f = fetch
    l = log
    m = merge
    o = checkout
    p = pull
    r = remote
    s = status
    w = whatchanged

    # Add
    aa = add --all
    ap = add --patch
    au = add --update

    # Checkout
    co = checkout

    # Commit
    ci = commit --interactive
    cm = commit --message

    # Diff
    dc = diff --cached
    ds = diff --staged
    dw = diff --word-diff

    # Push
    ps = "!git push origin $(git branch-name)"

    # Pull
    pl = "!git pull origin $(git branch-name)"

    # Alias management
    alias = "!git config --get-regexp '^alias\\.' | colrm 1 6 | sed 's/ / = /'"

    # Workflow
    save = stash save
    pop = stash 

    # Shell scripting aliases
    branch-name = rev-parse --abbrev-ref HEAD

